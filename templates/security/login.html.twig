{% extends 'base.html.twig' %}

{% block stylesheets %}
    {# {{ encore_entry_link_tags('app') }} #}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="wrapper fadeInDown">
    <div id="formContent">
        <form method="post">
            

            {% if app.user %}
                <div class="fadeIn first">
                    <h2>Vous êtes connecté en tant que: </h2>
                    <h3> {{ app.user.username }} <h3>
                    <a class="fadeIn fourth" href="/">Continuer</a>
                    <a class="fadeIn fourth logout" href="{{ path('app_logout') }}">Se Déconnecter</a>
                </div>

            {% else %}
            <div class="fadeIn first">
                <h1>Se Connecter</h1>
            </div>
            {# <label for="inputEmail">Email</label>  #}
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="fadeIn second" autocomplete="email" placeholder="Email" required autofocus>
            {# <label for="inputPassword">Password</label> #}
            <input type="password" name="password" id="inputPassword" class="adeIn third" autocomplete="current-password" placeholder="Password" required>
                
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >
            
            <input class="fadeIn fourth" type="submit" value="Se Connecter">
            
            {% endif %}
            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            {% if error %}
                <div class="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}


        </form>
    </div>
</div>
{% endblock %}
